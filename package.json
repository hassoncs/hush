{
  "name": "hush-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Hush CLI and documentation monorepo",
  "scripts": {
    "build": "pnpm -r run build",
    "test": "pnpm -r run test",
    "dev": "pnpm -r run dev",
    "type-check": "pnpm -r run type-check",
    "cli:build": "pnpm --filter @chriscode/hush build",
    "cli:test": "pnpm --filter @chriscode/hush test",
    "release": "pnpm --filter @chriscode/hush publish",
    "docs:dev": "pnpm --filter docs dev",
    "docs:build": "pnpm --filter docs build",
    "docs:preview": "pnpm --filter docs preview",
    "deploy": "pnpm --filter docs build && pnpm --filter docs deploy"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.15.4"
}
